<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/apply_button_H"
        android:layout_width="74dp"
        android:layout_height="22dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="4dp"
        android:layout_marginTop="172dp"
        android:layout_marginLeft="41dp"
        app:cardBackgroundColor="@color/white"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply"
                android:textSize = "10dp"
                android:textColor="#000000"
                android:textAppearance="@style/apply"
                />

            <View
                android:id="@+id/vector"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="11dp"
                android:backgroundTint="@color/black"
                android:layout_toRightOf="@id/apply"
                android:background="@drawable/baseline_arrow_forward_24"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/brand_logo_relative_layout_H"
                android:layout_width="136dp"
                android:layout_height="110dp"
                android:background="@drawable/horizontal_scroll_card_image_background">
                <ImageView
                    android:id="@+id/bookmark_icon_H"
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:src="@drawable/bookmark_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentTop="true"
                    />

                <ImageView
                    android:id="@+id/filled_bookmar_H"
                    android:layout_width="11dp"
                    android:layout_height="18dp"
                    android:src="@drawable/bookmark_icon_filled"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentTop="true"
                    android:visibility="gone"
                    />

            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/brand_image_H"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baskin_robbins_logo"
                app:shapeAppearanceOverlay="@style/SoftCorner" />

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/brand_logo_relative_layout_H"
                android:layout_marginStart="12dp"
                android:layout_marginRight="12dp">

                <TextView
                    android:id="@+id/job_title_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispatcher"
                    android:maxLength="11"
                    android:textColor="#B3000000"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:id="@+id/rates_relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/job_title_h"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/rupee_icon"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/baseline_currency_rupee_24" />

                    <TextView
                        android:id="@+id/rates_H"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@id/rupee_icon"
                        android:maxLength="4"
                         android:text="150"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rating_linear_layout_H"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/job_title_h"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ratings_H"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="4.2"
                        android:textColor="@color/light_green"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <ImageView

                        android:id="@+id/star_image_view_ratings_H"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/baseline_star_24"
                        app:tint="@color/light_green" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/duration_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_linear_layout_H"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/job_title_h"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_view_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:maxLength="3"
                        android:text="24 "
                        android:textColor="#F6CE40"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="1dp"
                        android:text=" hrs"
                        android:textColor="#F6CE40"
                        android:textSize="10dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>




    </RelativeLayout>
